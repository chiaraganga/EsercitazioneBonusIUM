<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ProvaEB" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluscuro</item>
        <item name="colorPrimaryVariant">@color/bluscuro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here.
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
        -->

    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/bluscuro</item>
        <item name="colorPrimary">@color/bluscuro</item>
        <item name="colorButtonNormal">@color/bluscuro</item>
        <item name="android:positiveButtonText">@color/bluscuro</item>
        <item name="android:negativeButtonText">@color/bluscuro</item>
        <item name="buttonBarNeutralButtonStyle">@color/bluscuro</item>
    </style>


    <style name="PhotoTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/signInButton</item>
        <item name="toolbarStyle">@style/ToolbarTheme</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar.Light." parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="SmoothCheckBoxStyle.">
        <item name="color_checked">@color/bluscuro</item>
        <item name="color_tick">@color/white</item>
    </style>

</resources>